             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="75"
			 xmlns:vm="using:PasswordManager.Frontend.ViewModels"
             x:Class="PasswordManager.Frontend.Views.PasswordView"
			 x:DataType="vm:PasswordViewModel"
			 Height="65"
			 >
